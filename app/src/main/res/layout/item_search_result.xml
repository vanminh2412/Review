<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/img_iphonx" />

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/img_product"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/product_name"
                android:textColor="@color/colorTextProductName"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imv_vote1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@+id/img_product"
                android:src="@drawable/ic_starvote" />
            <ImageView
                android:id="@+id/imv_vote2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_toRightOf="@+id/imv_vote1"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_starvote" />
            <ImageView
                android:id="@+id/imv_vote3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_toRightOf="@+id/imv_vote2"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_starvote" />
            <ImageView
                android:id="@+id/imv_vote4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_toRightOf="@+id/imv_vote3"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_starvote" />
            <ImageView
                android:id="@+id/imv_vote5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_toRightOf="@+id/imv_vote4"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_star" />
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_toRightOf="@+id/imv_vote5"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_14sdp"
                android:text="4.1/125"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>